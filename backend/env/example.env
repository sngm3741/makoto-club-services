# Example configuration for makoto-club backend
# HTTP_ADDR: API が待ち受けるアドレス
HTTP_ADDR=:8080
# MONGO_URI: MongoDB への接続先
MONGO_URI=mongodb://mongo:27017/makoto-club
# MONGO_DB: 使用するデータベース名
MONGO_DB=makoto-club
# SURVEY_COLLECTION: アンケート公開用コレクション
SURVEY_COLLECTION=reviews
# PING_COLLECTION: ヘルスチェック用コレクション
PING_COLLECTION=pings
# MONGO_CONNECT_TIMEOUT: MongoDB 接続タイムアウト
MONGO_CONNECT_TIMEOUT=10s
# TIMEZONE: サーバー内部で利用するタイムゾーン
TIMEZONE=Asia/Tokyo
GHCR_USER=local
VIRTUAL_HOST=makoto-club.example.test
API_ALLOWED_ORIGINS=http://localhost:3000
# AUTH_*: 各 IdP との連携に使う JWT 設定
AUTH_LINE_JWT_SECRET=change-me
AUTH_LINE_JWT_ISSUER=auth-line
AUTH_LINE_JWT_AUDIENCE=makoto-club-api
AUTH_TWITTER_JWT_SECRET=change-me
AUTH_TWITTER_JWT_ISSUER=auth-twitter
AUTH_TWITTER_JWT_AUDIENCE=makoto-club-api
AUTH_JWT_AUDIENCE=makoto-club-api

# messenger-service 関連: 投稿通知の送信先
MESSENGER_GATEWAY_URL=http://messenger-ingress:8080
MESSENGER_GATEWAY_DESTINATION=line
MESSENGER_DISCORD_INCOMING_DESTINATION=discord
MESSENGER_SLACK_DESTINATION=slack

# ADMIN_REVIEW_BASE_URL: Discord/Slack 通知で使う管理画面リンク
ADMIN_REVIEW_BASE_URL=http://localhost:3000/admin/reviews
# FAILED_NOTIFICATION_COLLECTION: 通知失敗レコードの保存先
FAILED_NOTIFICATION_COLLECTION=failed_notifications
